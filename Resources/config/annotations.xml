<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jsonannotation.event.controller.class">thomasbeaujean\JsonAnnotationBundle\EventListener\ControllerListener</parameter>
    </parameters>

    <services>
        <service id="sensio_framework_extra.controller.listener" class="%sensio_framework_extra.controller.listener.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="annotation_reader" />
        </service>
    </services>
</container>